<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_attachment_imageview_background_height" >
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/add_attachment_table_item_width_height"
            android:layout_height="@dimen/add_attachment_table_item_width_height"
            android:layout_gravity="center" />
    </FrameLayout>
    <TextView
        android:id="@+id/app_description"
        android:layout_width="@dimen/add_attachment_table_item_width_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/add_attachment_item_size"
        android:ellipsize="end"
        android:gravity="center" />
</LinearLayout>